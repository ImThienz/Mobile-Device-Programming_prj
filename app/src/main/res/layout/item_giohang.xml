<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:id="@+id/item_giohang_image"
            android:src="@drawable/iconnew"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/item_giohang_tensp"
                android:text="Tên Sản Phẩm"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="4.5"
                android:text="50000"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/item_giohang_gia"/>
            <ImageView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/item_giohang_tru"
                android:src="@drawable/ic_remove_circle_24"/>
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/item_giohang_soluong"
                android:text="1"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/item_giohang_cong"
                android:src="@drawable/ic_add_circle_24"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_equal_forward_24"/>
            <TextView
                android:gravity="center|center_vertical"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/item_giohang_giasp2"
                android:text="75000 "
                android:textStyle="bold"/>





        </LinearLayout>


        </LinearLayout>


        
    </LinearLayout>
        

</androidx.cardview.widget.CardView>